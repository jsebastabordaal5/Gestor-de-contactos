<IniciarSesionScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 50

        Label:
            text: "Pantalla para iniciar sesión"
            font_size: '24sp'
            halign: "center"
            valign: "middle"
            text_size: self.size

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40
            spacing: 10

            Label:
                text: "Usuario:"
                size_hint_x: 0.3
                halign: "right"
                valign: "middle"
                text_size: self.size

            TextInput:
                id: usuario_input
                multiline: False

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40
            spacing: 10

            Label:
                text: "Contraseña:"
                size_hint_x: 0.3
                halign: "right"
                valign: "middle"
                text_size: self.size

            TextInput:
                id: contrasena_input
                multiline: False
                password: True

        Button:
            text: "Iniciar sesión"
            size_hint: None, None
            size: 200, 50
            pos_hint: {"center_x": 0.5}
            on_press : root.iniciar_sesion()

