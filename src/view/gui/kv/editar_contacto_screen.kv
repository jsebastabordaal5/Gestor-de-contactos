<EditarContactoScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Editar Contacto"
            font_size: 24
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            text: "Nombre:"
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: nombre_input
            multiline: False
            size_hint_y: None
            height: 40

        Label:
            text: "Tel√©fono:"
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: telefono_input
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: correo_input
            multiline: False
            size_hint_y: None
            height: 40

        Button:
            text: "Guardar Cambios"
            size_hint_y: None
            height: 50
            on_release: root.guardar_cambios()

        Button:
            text: "Volver"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "usuario"



