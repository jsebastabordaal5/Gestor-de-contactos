<VerContactosScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: dp(50)

            Spinner:
                id: filtro_tipo
                text: "Seleccionar tipo"
                values: ["profesional", "personal"]
                size_hint_x: 0.3

            TextInput:
                id: filtro_nombre
                hint_text: "Filtrar por nombre"
                size_hint_x: 0.35

            TextInput:
                id: filtro_telefono
                hint_text: "Filtrar por tel√©fono"
                size_hint_x: 0.35

        RecycleView:
            id: lista_contactos
            viewclass: "Label"
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"

        Button:
            text: "Filtrar"
            size_hint_y: None
            height: dp(50)
            on_release: root.filtrar_contactos()

        Button:
            text: "Volver"
            size_hint_y: None
            height: dp(50)
            on_release:
                app.root.current = "usuario_screen"
